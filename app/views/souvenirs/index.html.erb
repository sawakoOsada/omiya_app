<% @souvenirs.each do |souvenir| %>
  <%= souvenir.name %>
  <%= souvenir.price %>
  <%= souvenir.prefecture.name %>
  <%= link_to '詳細', souvenir_path(souvenir.id) %>
<% end %>

<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name, :include_blank => '指定なし' %>
  <%= f.submit %>
<% end %>
