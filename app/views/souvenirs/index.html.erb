<%= search_form_for @q do |f| %>
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %>
  <%= f.collection_select :prefecture_id_eq, Prefecture.all, :id, :name, :include_blank => '指定なし' %>
  <%= f.submit %>
<% end %>

<div class="uk-overflow-auto">
    <table class="uk-table uk-table-hover uk-table-middle uk-table-divider">
        <thead>
            <tr>
                <th class="uk-table-shrink">なんで縦なの</th>
                <th class="uk-table-shrink">おなまえ</th>
                <th class="uk-table-expand">ねだん</th>
                <th class="uk-width-small">けん</th>
                <th class="uk-table-shrink uk-text-nowrap">Shrink + Nowrap</th>
            </tr>
        </thead>
        <tbody>
          <% @souvenirs.each do |souvenir| %>
            <tr>
                <td><%= image_tag souvenir.image.url, :size => '100x100' %></td>
                <td class="uk-table-link">
                    <a class="uk-link-reset" href=""><%= souvenir.name %></a>
                </td>
                <td class="uk-table-link">
                    <a class="uk-link-reset" href=""><%= souvenir.prefecture.name %></a>
                </td>
                <td class="uk-table-link">
                    <a class="uk-link-reset" href=""><%= souvenir.name %></a>
                </td>
                <td class="uk-table-link">
                    <a class="uk-link-reset" href=""><%= souvenir.price %></a>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>
