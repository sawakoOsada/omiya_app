<!DOCTYPE html>
<html>
  <head>
    <title>おみやげ横丁</title>
    <%= favicon_link_tag('favicon.ico') %>
    <script
      src: "https://js.pay.jp/"
      type: "text/javascript">
    </script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="uk-navbar-container" uk-navbar>
    <div class="uk-navbar-left">
        <ul class="uk-navbar-nav">
          <li><a class="uk-navbar-toggle" uk-navbar-toggle-icon href="#offcanvas-slide" uk-toggle></a></li>
          <li><%= link_to image_tag("/assets/logo.png", :size => '50x50'), root_path %></li>
            <li><%= link_to 'しょおひんさがす', souvenirs_path %></li>
        </ul>
        </div>

    <div class="uk-navbar-right">

           <ul class="uk-navbar-nav">


               <li><%= link_to 'かーと', cart_path(current_cart) %></li>
           </ul>

       </div>


    </nav>


    <nav>

      <div id="offcanvas-slide" uk-offcanvas>
    <div class="uk-offcanvas-bar">

      <div class="uk-width-1-3">
        <ul class="uk-nav-primary uk-nav-parent-icon" uk-nav>
            <li class="uk-active"><a href="#">めぬう</a></li>
            <li class="uk-parent">
              <a href="#">おみやを探す</a>
              <ul class="uk-nav-sub">
                <li><%= link_to 'おみやげいちらん', souvenirs_path %></li>
              </ul>
            </li>
            <% if user_signed_in? %>
              <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to '新規登録', new_user_registration_path %></li>
              <li><%= link_to 'ログイン', new_user_session_path %></li>
            <% end %>
            <li><%= link_to 'かーと', cart_path(current_cart) %></li>
        </ul>
      </div>
    </div>
</div>
    </nav>

    <div class="contents">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>

  </body>
</html>
