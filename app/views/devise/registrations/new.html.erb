    <h2><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br />

    <%= f.fields_for :addresses do |address| %>
      <p>住所は後からでも登録できます</p>
      <h2>住所</h2>

      <div class="field">
        <%= address.label :氏名 %><br />
        <%= address.text_field :name %>
      </div>

      <div class="field">
        <%= address.label :郵便番号 %><br />
        <%= address.text_field :zip %>
      </div>

      <div class="field">
        <%= address.collection_select :prefecture_id, Prefecture.all, :id, :name, :include_blank => '都道府県' %>
      </div>

      <div class="field">
        <%= address.label :市町村 %><br />
        <%= address.text_field :city %>
      </div>

      <div class="field">
        <%= address.label :町名番地 %><br />
        <%= address.text_field :town %>
      </div>

      <div class="field">
        <%= address.label :建物名 %><br />
        <%= address.text_field :building %>
      </div>
    <% end %><br />

  <div class="actions">
    <%= f.submit t('.sign_up') %>
  </div>
<% end %>

<div class="uk-flex uk-flex-canter">
<%= render "devise/shared/links" %>
</div>
